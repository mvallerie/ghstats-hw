# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# API Repository search
GET	/api/search/:keyword	    controllers.Application.apiSearch(keyword: String)

# API Repository stats
GET	/api/stats/:owner/:repo	    controllers.Application.apiStats(owner: String, repo: String)

# View Search
GET	/search/:keyword	    controllers.Application.search(keyword: String)

# View Stats
GET	/stats/:owner/:repo	    controllers.Application.stats(owner: String, repo: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
